<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".ui.activities.DashboardActivity">

    <FrameLayout
        android:id="@+id/dashboard_activity_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation_meow"
       />


    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_navigation_meow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        app:mbn_countBackgroundColor="@color/white"
        app:mbn_countTextColor="@color/DarkGrey"
        app:mbn_defaultIconColor="@color/MediumGrey"
        app:mbn_rippleColor="@color/primary"
        app:mbn_selectedIconColor="@color/primary"
        app:mbn_shadowColor="@color/LightGrey"

        />

</RelativeLayout>